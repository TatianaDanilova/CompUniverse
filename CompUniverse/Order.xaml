<Window x:Class="CompUniverse.Order"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CompUniverse"
        mc:Ignorable="d"
        Title="Order" Height="450" Width="800" WindowStartupLocation="CenterScreen">

    <Window.Background>
        <ImageBrush ImageSource="/Images/Background.png"/>
    </Window.Background>
    <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <Border  BorderThickness="3" CornerRadius="5" Background="LightGray" BorderBrush="Gray" HorizontalAlignment="Center" VerticalAlignment="Center" Width="450">
            <Border.Effect>
                <DropShadowEffect BlurRadius="40" Color="LightGray" ShadowDepth="0"/>
            </Border.Effect>
            <StackPanel Margin="30 15">
                <TextBlock Text="Ваш заказ:" TextWrapping="Wrap" Margin="10" FontSize="25" FontWeight="Bold"/>
                <DataGrid>
                    
                </DataGrid>
                <Button x:Name="ToVideoCard" Margin="20" Content="Каталог" Background="Gray" Height="50" Width="225" FontSize="20" HorizontalContentAlignment="Center" Click="ToVideoCardClick"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
